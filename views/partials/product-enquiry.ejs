<div class="product-enquiry-modal" id="productEnquiryModal" onclick="closeProductEnquiryOnOutside(event)">
    <div class="product-enquiry-dialog">
        <div class="product-enquiry-content">
            <div class="product-enquiry-header">
                <h5 class="product-enquiry-title text-white" style="font-weight: 400;">
                    <i class="fas fa-clipboard-list"></i> Product Enquiry Form
                </h5>
                <button class="product-enquiry-close" onclick="closeProductEnquiry()" aria-label="Close">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <form class="product-enquiry-form" id="productEnquiryForm" novalidate>
                <div class="product-enquiry-body" id="productEnquiryFormContent">
                    <div class="product-enquiry-row">
                        <div class="product-enquiry-col-6">
                            <label for="productEnquiryFullName" class="product-enquiry-label">
                                Full Name<span class="product-enquiry-required">*</span>
                            </label>
                            <input type="text" class="product-enquiry-input" id="productEnquiryFullName"
                                placeholder="John Doe" required minlength="2" maxlength="50">
                            <div class="product-enquiry-error" id="productEnquiryFullNameError"></div>
                        </div>

                        <div class="product-enquiry-col-6">
                            <label for="productEnquiryEmail" class="product-enquiry-label">
                                Email Address<span class="product-enquiry-required">*</span>
                            </label>
                            <div class="product-enquiry-input-group">
                                <span class="product-enquiry-input-icon"><i class="fas fa-envelope"></i></span>
                                <input type="email" class="product-enquiry-input" id="productEnquiryEmail"
                                    placeholder="john@example.com" required>
                            </div>
                            <div class="product-enquiry-error" id="productEnquiryEmailError"></div>
                        </div>

                        <div class="product-enquiry-col-6">
                            <label for="productEnquiryPhone" class="product-enquiry-label">
                                Phone Number<span class="product-enquiry-required">*</span>
                            </label>
                            <div class="product-enquiry-input-group">
                                <span class="product-enquiry-input-icon"><i class="fas fa-phone"></i></span>
                                <input type="tel" class="product-enquiry-input" id="productEnquiryPhone"
                                    placeholder="+91 98765 43210" required pattern="[0-9+\s\-()]{10,15}">
                            </div>
                            <div class="product-enquiry-error" id="productEnquiryPhoneError"></div>
                        </div>

                        <div class="product-enquiry-col-6">
                            <label for="productEnquiryCompany" class="product-enquiry-label">
                                Company Name
                            </label>
                            <input type="text" class="product-enquiry-input" id="productEnquiryCompany"
                                placeholder="Your Company" maxlength="100">
                            <div class="product-enquiry-error" id="productEnquiryCompanyError"></div>
                        </div>


                        <div class="product-enquiry-col-6">
                            <label for="productEnquiryProduct" class="product-enquiry-label">
                                Product
                            </label>
                            <input type="text" class="product-enquiry-input" id="productEnquiryProduct" value="<%= product.productCode %>" readonly>
                            <div class="product-enquiry-error" id="productEnquiryProductError"></div>
                        </div>





                        <div class="product-enquiry-col-12">
                            <label for="productEnquiryMessage" class="product-enquiry-label">
                                Your Message<span class="product-enquiry-required">*</span>
                            </label>
                            <textarea class="product-enquiry-textarea" id="productEnquiryMessage" rows="4"
                                placeholder="Please describe your requirements in detail..." required minlength="10"
                                maxlength="1000"></textarea>
                            <div class="product-enquiry-error" id="productEnquiryMessageError"></div>
                        </div>
                    </div>
                </div>

                <div class="product-enquiry-success" id="productEnquirySuccess">
                    <i class="fas fa-check-circle"></i>
                    <h4>Thank You!</h4>
                    <p>Your enquiry has been submitted successfully. We'll get back to you soon!</p>
                </div>

                <div class="product-enquiry-footer" id="productEnquiryFooter">
                    <button type="button" class="product-enquiry-cancel" onclick="closeProductEnquiry()">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                    <button type="submit" class="product-enquiry-submit">
                        <i class="fas fa-paper-plane"></i> Submit Enquiry
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


<script>



document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('productEnquiryForm');
    const successDiv = document.getElementById('productEnquirySuccess');
    const formContent = document.getElementById('productEnquiryFormContent');
    const footer = document.getElementById('productEnquiryFooter');

    if (form) {
        form.addEventListener('submit', handleProductEnquirySubmit);
    }

    // Input validation on blur
    setupValidation();
});

async function handleProductEnquirySubmit(e) {
    e.preventDefault();

    // Clear previous errors
    clearErrors();

    // Get form values
    const formData = {
        fullName: document.getElementById('productEnquiryFullName').value.trim(),
        email: document.getElementById('productEnquiryEmail').value.trim(),
        phone: document.getElementById('productEnquiryPhone').value.trim(),
        company: document.getElementById('productEnquiryCompany').value.trim(),
        product: document.getElementById('productEnquiryProduct').value.trim(),
        message: document.getElementById('productEnquiryMessage').value.trim()
    };

    // Validate form
    if (!validateForm(formData)) {
        return;
    }

    // Disable submit button
    const submitBtn = document.querySelector('.product-enquiry-submit');
    const originalBtnText = submitBtn.innerHTML;
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Submitting...';

    try {
        // Submit form data
        const response = await fetch('/api/product-enquiry', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(formData)
        });

        

        const data = await response.json();

        if (response.ok && data.success) {
            // Show success message briefly
            document.getElementById('productEnquiryFormContent').style.display = 'none';
            document.getElementById('productEnquiryFooter').style.display = 'none';
            document.getElementById('productEnquirySuccess').style.display = 'block';

            // Redirect to thank you page after 2 seconds
            setTimeout(() => {
                window.location.href = '/thank-you?enquiry=success';
            }, 2000);
        } else {
            // Show error message
            showError('general', data.message || 'Failed to submit enquiry. Please try again.');
            submitBtn.disabled = false;
            submitBtn.innerHTML = originalBtnText;
        }
    } catch (error) {
        console.error('Error submitting form:', error);
        showError('general', 'Network error. Please check your connection and try again.');
        submitBtn.disabled = false;
        submitBtn.innerHTML = originalBtnText;
    }
}

function validateForm(formData) {
    let isValid = true;

    // Validate Full Name
    if (!formData.fullName || formData.fullName.length < 2) {
        showError('productEnquiryFullName', 'Please enter a valid name (at least 2 characters)');
        isValid = false;
    }

    // Validate Email
    const emailRegex = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
    if (!formData.email || !emailRegex.test(formData.email)) {
        showError('productEnquiryEmail', 'Please enter a valid email address');
        isValid = false;
    }

    // Validate Phone
    const phoneRegex = /^[0-9+\s\-()]{10,15}$/;
    if (!formData.phone || !phoneRegex.test(formData.phone)) {
        showError('productEnquiryPhone', 'Please enter a valid phone number');
        isValid = false;
    }

    // Validate Message
    if (!formData.message || formData.message.length < 10) {
        showError('productEnquiryMessage', 'Please enter a message (at least 10 characters)');
        isValid = false;
    }

    return isValid;
}

function showError(fieldId, message) {
    const errorDiv = document.getElementById(fieldId + 'Error');
    if (errorDiv) {
        errorDiv.textContent = message;
        errorDiv.style.display = 'block';
    }

    // Add error class to input
    if (fieldId !== 'general') {
        const input = document.getElementById(fieldId);
        if (input) {
            input.classList.add('error');
        }
    }
}

function clearErrors() {
    const errorDivs = document.querySelectorAll('.product-enquiry-error');
    errorDivs.forEach(div => {
        div.textContent = '';
        div.style.display = 'none';
    });

    const inputs = document.querySelectorAll('.product-enquiry-input, .product-enquiry-textarea');
    inputs.forEach(input => {
        input.classList.remove('error');
    });
}

function setupValidation() {
    // Real-time validation on blur
    const fullNameInput = document.getElementById('productEnquiryFullName');
    const emailInput = document.getElementById('productEnquiryEmail');
    const phoneInput = document.getElementById('productEnquiryPhone');
    const messageInput = document.getElementById('productEnquiryMessage');

    if (fullNameInput) {
        fullNameInput.addEventListener('blur', function() {
            if (this.value.trim().length > 0 && this.value.trim().length < 2) {
                showError('productEnquiryFullName', 'Name must be at least 2 characters');
            } else {
                document.getElementById('productEnquiryFullNameError').style.display = 'none';
                this.classList.remove('error');
            }
        });
    }

    if (emailInput) {
        emailInput.addEventListener('blur', function() {
            const emailRegex = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
            if (this.value.trim() && !emailRegex.test(this.value.trim())) {
                showError('productEnquiryEmail', 'Please enter a valid email address');
            } else {
                document.getElementById('productEnquiryEmailError').style.display = 'none';
                this.classList.remove('error');
            }
        });
    }

    if (phoneInput) {
        phoneInput.addEventListener('blur', function() {
            const phoneRegex = /^[0-9+\s\-()]{10,15}$/;
            if (this.value.trim() && !phoneRegex.test(this.value.trim())) {
                showError('productEnquiryPhone', 'Please enter a valid phone number');
            } else {
                document.getElementById('productEnquiryPhoneError').style.display = 'none';
                this.classList.remove('error');
            }
        });
    }

    if (messageInput) {
        messageInput.addEventListener('blur', function() {
            if (this.value.trim().length > 0 && this.value.trim().length < 10) {
                showError('productEnquiryMessage', 'Message must be at least 10 characters');
            } else {
                document.getElementById('productEnquiryMessageError').style.display = 'none';
                this.classList.remove('error');
            }
        });
    }
}

// Modal functions
function closeProductEnquiry() {
    document.getElementById('productEnquiryModal').style.display = 'none';
    document.getElementById('productEnquiryForm').reset();
    clearErrors();
    
    // Reset form display
    document.getElementById('productEnquiryFormContent').style.display = 'block';
    document.getElementById('productEnquiryFooter').style.display = 'flex';
    document.getElementById('productEnquirySuccess').style.display = 'none';
}

function closeProductEnquiryOnOutside(event) {
    const modal = document.getElementById('productEnquiryModal');
    if (event.target === modal) {
        closeProductEnquiry();
    }
}

function openProductEnquiry() {
    document.getElementById('productEnquiryModal').style.display = 'block';
}

</script>