<script>
document.addEventListener("DOMContentLoaded", function () {
  const exampleModal = document.getElementById("exampleModal");

  if (exampleModal) {
    exampleModal.addEventListener("show.bs.modal", function (event) {
      const button = event.relatedTarget;

      // Read data attributes (all lowercase for consistency)
      const productCode = button.getAttribute("data-productcode") || "N/A";
      const productType = button.getAttribute("data-producttype") || "-";
      const name = button.getAttribute("data-name") || productCode;
      const image = button.getAttribute("data-image") || "";
      const category = button.getAttribute("data-category") || "-";
      const subCategory = button.getAttribute("data-subcategory") || "-";
      const texture = button.getAttribute("data-texture") || "-";
      const design = button.getAttribute("data-design") || "-";
      const size = button.getAttribute("data-size") || "-";
      const thickness = button.getAttribute("data-thickness") || "-";
      const width = button.getAttribute("data-width") || "-";

      // Update modal content
      document.getElementById("skydecorModalProductCode").textContent = productCode;
      document.getElementById("skydecorModalProductTitle").textContent = productCode;
      document.getElementById("skydecorModalProductImage").src = image;
      document.getElementById("skydecorModalProductType").textContent = productType;
      document.getElementById("skydecorModalCategory").textContent = category;
      document.getElementById("skydecorModalSubCategory").textContent = subCategory;
      document.getElementById("skydecorModalTexture").textContent = texture;
      document.getElementById("skydecorModalDesign").textContent = design;
      document.getElementById("skydecorModalSize").textContent = size;
      document.getElementById("skydecorModalThickness").textContent = thickness;
      document.getElementById("skydecorModalWidth").textContent = width;

      // Optional: update download link dynamically if needed
      const downloadLink = button.getAttribute("data-downloadlink") || "#";
      document.getElementById("productDownloadLink").href = downloadLink;
    });
  }
});
</script>
