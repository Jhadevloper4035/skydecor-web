<div class="product-search-bar-search-modal-overlay" id="searchOverlay">
    <div class="product-search-bar-search-modal-container">
        <div class="product-search-bar-modal-header">
            <h1>Search</h1>
            <button class="product-search-bar-modal-close-btn" onclick="ProductSearchModule.close()">✕</button>
