<script>
    // Namespaced Product Search Module to avoid conflicts
    const ProductSearchModule = (function() {
        // Private variables
        let searchTimeout = null;
        let selectedIndex = -1;
        
        // DOM element references (cached for performance)
        const elements = {
            overlay: null,
            input: null,
            clearBtn: null,
            autocomplete: null,
            noResults: null,
            keywords: null
        };

        // Initialize DOM references
        function initElements() {
            elements.overlay = document.getElementById('searchOverlay');
            elements.input = document.getElementById('productSearchInput');
            elements.clearBtn = document.getElementById('productSearchClearBtn');
            elements.autocomplete = document.getElementById('productSearchAutocomplete');
            elements.noResults = document.getElementById('productSearchNoResults');
            elements.keywords = document.getElementById('productSearchKeywords');
        }

        // Public: Open search modal
        function open() {
            if (!elements.overlay) initElements();
            
            elements.overlay.classList.add('active');
            elements.input.focus();
            document.body.style.overflow = 'hidden';
            showKeywords();
        }

        // Public: Close search modal
        function close() {
            if (!elements.overlay) return;
            
            elements.overlay.classList.remove('active');
            elements.input.value = '';
            hideAutocomplete();
            document.body.style.overflow = 'auto';
            selectedIndex = -1;
        }

        // Public: Clear search input
        function clearSearch() {
            if (!elements.input) return;
            
            elements.input.value = '';
            elements.input.focus();
            elements.clearBtn.style.display = 'none';
            showKeywords();
            hideAutocomplete();
            selectedIndex = -1;
        }

        // Private: Show keywords section
        function showKeywords() {
            if (elements.keywords) {
                elements.keywords.style.display = 'block';
            }
            hideAutocomplete();
        }

        // Private: Hide autocomplete dropdown
        function hideAutocomplete() {
            if (elements.autocomplete) {
                elements.autocomplete.classList.remove('active');
            }
            if (elements.noResults) {
                elements.noResults.style.display = 'none';
            }
        }

        // Private: Show no results message
        function showNoResults() {
            if (elements.autocomplete) {
                elements.autocomplete.classList.remove('active');
            }
            if (elements.noResults) {
                elements.noResults.style.display = 'block';
            }
        }

        // Private: Load autocomplete suggestions
        function loadAutocomplete(query) {
            fetch('/products/autocomplete?q=' + encodeURIComponent(query))
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.data && data.data.length > 0) {
                        displayAutocomplete(data.data);
                        elements.noResults.style.display = 'none';
                    } else {
                        showNoResults();
                    }
                })
                .catch(err => {
                    console.error('Product Search Error:', err);
                    showNoResults();
                });
        }

        // Private: Display autocomplete suggestions
        function displayAutocomplete(suggestions) {
            if (!elements.autocomplete) return;
            
            let html = '';

            suggestions.slice(0, 8).forEach(item => {
                const productUrl = `/product/detail/${item.productCode}`;
                const safeName = (item.productName || '').replace(/'/g, "\\'").replace(/"/g, '&quot;');
                const safeImage = (item.image || 'https://via.placeholder.com/50?text=Product').replace(/"/g, '&quot;');
                const safeCategory = (item.category || 'Category').replace(/"/g, '&quot;');
                
                html += `
                    <a href="${productUrl}" class="product-search-bar-autocomplete-item" onclick="ProductSearchModule.close()">
                        <img src="${safeImage}" alt="${safeName}" class="product-search-bar-autocomplete-item-image" 
                             onerror="this.src='https://via.placeholder.com/50?text=Product'">
                        <div class="product-search-bar-autocomplete-item-content">
                            <div class="product-search-bar-autocomplete-item-name">${item.productName}</div>
                            <div class="product-search-bar-autocomplete-item-code">${item.productCode}</div>
                            <div class="product-search-bar-autocomplete-item-category">${safeCategory}</div>
                        </div>
                    </a>
                `;
            });

            elements.autocomplete.innerHTML = html;
            elements.autocomplete.classList.add('active');
            selectedIndex = -1;
        }

        // Private: Update keyboard selection highlight
        function updateSelection(items) {
            items.forEach((item, index) => {
                item.style.background = index === selectedIndex ? '#f8f8f8' : '';
            });
        }

        // Private: Handle search input changes
        function handleInput(e) {
            const query = e.target.value.trim();
            
            // Show/hide clear button
            elements.clearBtn.style.display = query.length > 0 ? 'flex' : 'none';

            clearTimeout(searchTimeout);

            if (query.length > 0) {
                elements.keywords.style.display = 'none';
                searchTimeout = setTimeout(() => {
                    loadAutocomplete(query);
                }, 300);
            } else {
                showKeywords();
            }

            selectedIndex = -1;
        }

        // Private: Handle keyboard navigation
        function handleKeydown(e) {
            const dropdown = elements.autocomplete;
            const items = dropdown.querySelectorAll('.product-search-bar-autocomplete-item');

            if (e.key === 'ArrowDown') {
                e.preventDefault();
                selectedIndex = Math.min(selectedIndex + 1, items.length - 1);
                updateSelection(items);
            } else if (e.key === 'ArrowUp') {
                e.preventDefault();
                selectedIndex = Math.max(selectedIndex - 1, -1);
                updateSelection(items);
            } else if (e.key === 'Enter') {
                e.preventDefault();
                if (selectedIndex >= 0 && items[selectedIndex]) {
                    items[selectedIndex].click();
                }
            }
        }

        // Private: Handle overlay click (close on backdrop click)
        function handleOverlayClick(e) {
            if (e.target === elements.overlay) {
                close();
            }
        }

        // Private: Handle escape key globally
        function handleEscapeKey(e) {
            if (e.key === 'Escape' && elements.overlay && elements.overlay.classList.contains('active')) {
                close();
            }
            // Ctrl/Cmd + K shortcut to open search
            if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                e.preventDefault();
                open();
            }
        }

        // Initialize event listeners
        function init() {
            // Wait for DOM to be ready
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', setupEventListeners);
            } else {
                setupEventListeners();
            }
        }

        // Setup all event listeners
        function setupEventListeners() {
            initElements();

            if (!elements.overlay) {
                console.warn('Product Search Module: Search overlay not found');
                return;
            }

            // Input events
            if (elements.input) {
                elements.input.addEventListener('input', handleInput);
                elements.input.addEventListener('keydown', handleKeydown);
            }

            // Overlay click to close
            elements.overlay.addEventListener('click', handleOverlayClick);

            // Global keyboard shortcuts
            document.addEventListener('keydown', handleEscapeKey);
        }

        // Public API
        return {
            open: open,
            close: close,
            clearSearch: clearSearch,
            init: init
        };
    })();

    // Auto-initialize the module
    ProductSearchModule.init();
</script>