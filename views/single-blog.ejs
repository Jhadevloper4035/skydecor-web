<!doctype html>
<html class="no-js" lang="zxx">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Skydecor - Premium Quality Laminates Design Collections</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/img/favicon.png">

    <!-- CSS
	============================================ -->

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <!-- Icon Font CSS -->
    <link rel="stylesheet" href="/css/icons.min.css">
    <!-- Plugins CSS -->
    <link rel="stylesheet" href="/css/plugins.css">
    <!-- Main Style CSS -->
    <link rel="stylesheet" href="/css/style.css">



    <style>
        .single-sidebar-blog {
            flex-wrap: nowrap;
        }
    </style>


</head>

<body>


    <%- include("partials/header") %>


        <div class="container-fluid">
            <div class="breadcrumb-section">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/blogs">blog</a></li>
                        <li class="breadcrumb-item">
                            <%= blog.title %>
                        </li>
                    </ol>
                </nav>
            </div>
        </div>




        <div class="Blog-area  pb-100">
            <div class="container">
                <div class="row flex-row-reverse">

                    <div class="col-lg-9">
                        <article class="blog-details-wrapper ml-20" itemscope itemtype="https://schema.org/BlogPosting">
                            <div class="blog-details-top">

                                <!-- Blog Image -->
                                <% if (blog.image) { %>
                                    <figure class="blog-img-slide owl-carousel nav-style-4" itemprop="image">
                                        <img src="<%= blog.image %>" alt="<%= blog.meta_title || blog.title %>"
                                            width="1200" height="600" loading="eager" decoding="async"
                                            class="img-fluid">
                                    </figure>
                                    <% } %>

                                        <!-- Blog Content -->
                                        <div class="blog-details-content">

                                            <!-- Blog Meta -->
                                            <div class="blog-meta-2" aria-label="Blog metadata">
                                                <ul class="list-unstyled d-flex flex-wrap gap-3 mb-3">
                                                    <% if (blog.created_at) { %>
                                                        <li>
                                                            <time
                                                                datetime="<%= new Date(blog.created_at).toISOString() %>"
                                                                itemprop="datePublished">
                                                                <%= new
                                                                    Date(blog.created_at).toLocaleDateString('en-US', {
                                                                    day: 'numeric' , month: 'short' , year: 'numeric' })
                                                                    %>
                                                            </time>
                                                        </li>
                                                        <% } %>
                                                            <li>
                                                                <span itemprop="author" itemscope
                                                                    itemtype="https://schema.org/Person">
                                                                    By <span itemprop="name">
                                                                        <%= blog.author || "Admin" %>
                                                                    </span>
                                                                </span>
                                                            </li>
                                                </ul>
                                            </div>

                                            <!-- Blog Title -->
                                            <h1 class="h3 mb-4" itemprop="headline">
                                                <%= blog.title %>
                                            </h1>

                                            <!-- Blog Body -->
                                            <div class="blog-body" itemprop="articleBody">
                                                <%- blog.text %>
                                            </div>

                                            <!-- Meta Description (hidden, for SEO) -->
                                            <% if (blog.meta_description) { %>
                                                <meta itemprop="description" content="<%= blog.meta_description %>">
                                                <% } %>

                                        </div>
                            </div>





                        </article>
                    </div>


                    <div class="col-lg-3">
                        <div class="sidebar-style">
                            <div class="sidebar-widget">
                                <h4 class="pro-sidebar-title">Recent Blogs</h4>

                                <div class="sidebar-project-wrap mt-30">
                                    <% if (recentBlogs && recentBlogs.length> 0) { %>
                                        <% recentBlogs.forEach(function(rBlog) { %>
                                            <div class="single-sidebar-blog d-flex mb-3">

                                                <!-- Sidebar Blog Image -->
                                                <div class="sidebar-blog-img flex-shrink-0 me-2">
                                                    <a href="/blogs/<%= rBlog.url %>">
                                                        <img src="<%= rBlog.image || '/assets/img/blog/default.jpg' %>"
                                                            alt="<%= rBlog.meta_title || rBlog.title %>" width="80"
                                                            height="60" loading="lazy" decoding="async">
                                                    </a>
                                                </div>

                                                <!-- Sidebar Blog Content -->
                                                <div class="sidebar-blog-content flex-grow-1">
                                                    <h5 class="mb-1">
                                                        <a href="/blogs/<%= rBlog.url %>">
                                                            <%= rBlog.title %>
                                                        </a>
                                                    </h5>
                                                </div>

                                            </div>
                                            <% }) %>
                                                <% } else { %>
                                                    <p>No recent blogs found.</p>
                                                    <% } %>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>



        <%- include("partials/footer") %>


            <!-- All JS is  ============================================ -->

            <script src="/js/vendor/modernizr-3.11.7.min.js"></script>
            <script src="/js/vendor/jquery-v3.6.0.min.js"></script>
            <script src="/js/vendor/jquery-migrate-v3.3.2.min.js"></script>
            <script src="/js/vendor/popper.min.js"></script>
            <script src="/js/vendor/bootstrap.min.js"></script>
            <script src="/js/plugins.js"></script>
            <!-- Ajax Mail -->
            <script src="/js/ajax-mail.js"></script>
            <!-- Main JS -->
            <script src="/js/main.js"></script>

</body>

</html>